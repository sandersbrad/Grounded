<script>
  $('.about').click(function () {
    $(".index-item-box").eq(1).click();
    $(".property_index_item").eq(1).addClass("prop-tour")
    $(".property-modal").addClass("no-display");
    var tour = introJs().setOptions({
      steps: [
        {element:".prop-tour", intro: "Click on a property to view its details"},
        {element:".property-modal", intro:"Follow future investments on this property or invest!", position: "left", tooltipClass: "fixed", highlightClass: "fixed-buttons"},
        {element:".property-modal", intro:"Chart automatically generated by Zillow!  Research home value over the previous year.", position: "left", tooltipClass: "fixed-chart", highlightClass: "fixed"},
        {element:".property_index_item", intro: "<p> Add your own property to the list and attract co-investors.</p> <p> Zillow research charts will be automatically generated. </p><p> We'll let you know if Zillow doesn't have a listing </p>"},
        {element:".menus", intro: "Conveniently keep track of any properties you are following or invested in", disableInteraction: false}
      ],
      showStepNumbers: false,
      showProgress: true,
      showBullets: false,
      skipLabel: "Exit",
      scrollToElement: true,
      tooltipPosition: 'left',
      disableInteraction: false})
    tour.start().onbeforechange(function(targetElement) {
      if (this._currentStep === 1) {
        $(".property-modal").removeClass("no-display");
        $(".add_new_property").click();
      }
      if (this._currentStep === 4) {
        $(".add_new_property").click();
        $(".index-item-box").eq(5).click();
      }
    });
  })
</script>
